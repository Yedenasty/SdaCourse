<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.example.rent.sdacourse.Drawer.SimpleDrawingView
        android:id="@+id/simpleDrawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:background="@color/white"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">

        <Button
            android:id="@+id/fioletek_button"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/fioletek"
            android:layout_marginBottom="50dp"/>
    <Button
        android:id="@+id/blue_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_above="@+id/red_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/blue"
        android:layout_marginBottom="50dp"/>
    <Button
        android:id="@+id/red_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/blue_button"
        android:layout_toRightOf="@+id/blue_button"
        android:layout_marginBottom="50dp"/>
    <Button
        android:id="@+id/green_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/red_button"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/black_button"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/green_button"
        android:layout_marginBottom="50dp"/>


    <Button
        android:id="@+id/white_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gumuj"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/black_button"
        android:layout_alignEnd="@+id/black_button" />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
